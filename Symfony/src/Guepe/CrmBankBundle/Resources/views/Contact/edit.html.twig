{% extends 'GuepeCrmBankBundle::layout.html.twig' %}

{% block title %}Edit contacts{% endblock %}

{% block content %}
<script type="text/javascript">
	$(function(){
		// Datepicker
		$('#contact_birthdate').datepicker($.datepicker.regional["fr"]);
	});
</script>

		{% if message %}
		<p>{{ message }}</p>
		{% endif %}
		
		<form action="" method="post" {{ form_enctype(form) }}>
		<div class="headblock-element">

			{% form_theme form 'GuepeCrmBankBundle:Form:fields-in-row.html.twig' %}

			{{ form_row(form.firstname) }}
			{{ form_row(form.lastname) }}
			{{ form_row(form.birthdate) }}
			{{ form_row(form.birthplace) }}
			{{ form_row(form.email) }}
			{{ form_row(form.gsm) }}
			{{ form_row(form.phone) }}
			{{ form_row(form.niss) }}
		</div>
		<br/>
		<div class="showcontact">
			{% form_theme form 'GuepeCrmBankBundle:Form:fields-in-row.html.twig' %}
		    {{ form_rest(form) }}
		</div>
		    <input type="submit" value="Enregistrer" />
		</form>		
{% endblock %}	