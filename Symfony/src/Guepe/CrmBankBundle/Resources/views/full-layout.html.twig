<!DOCTYPE html>
<html lang="fr">
	    <head>
        <title>{% block title %}Bank CRM{% endblock %}</title>
        <meta charset=utf-8" />
        <link rel="stylesheet" href="{{ asset('bundles/guepecrmbank/css/main.css') }}" type="text/css" media="screen" />
		<link rel="stylesheet" href="{{ asset('bundles/guepecrmbank/css/print.css') }}" type="text/css" media="print" />
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js" type="text/javascript"></script> 
    	<link type="text/css" href="{{ asset('bundles/guepecrmbank/js')}}/jquery-ui/css/cupertino/jquery-ui-1.8.17.custom.css" rel="stylesheet" />	
		<script type="text/javascript" src="{{ asset('bundles/guepecrmbank/js')}}/jquery-ui/js/jquery-1.7.1.min.js"></script>
		<script type="text/javascript" src="{{ asset('bundles/guepecrmbank/js')}}/jquery-ui/js/jquery-ui-1.8.17.custom.min.js"></script>
		<script type="text/javascript">
			jQuery(function($){
				$.datepicker.regional['fr'] = {
					closeText: 'Fermer',
					prevText: '&#x3c;Préc',
					nextText: 'Suiv&#x3e;',
					currentText: 'Courant',
					monthNames: ['Janvier','Février','Mars','Avril','Mai','Juin',
					'Juillet','Août','Septembre','Octobre','Novembre','Décembre'],
					monthNamesShort: ['Jan','Fév','Mar','Avr','Mai','Jun',
					'Jul','Aoû','Sep','Oct','Nov','Déc'],
					dayNames: ['Dimanche','Lundi','Mardi','Mercredi','Jeudi','Vendredi','Samedi'],
					dayNamesShort: ['Dim','Lun','Mar','Mer','Jeu','Ven','Sam'],
					dayNamesMin: ['Di','Lu','Ma','Me','Je','Ve','Sa'],
					weekHeader: 'Sm',
					dateFormat: 'dd/mm/yy',
					firstDay: 1,
					isRTL: false,
					showMonthAfterYear: false,
					yearSuffix: ''};
				$.datepicker.setDefaults($.datepicker.regional['fr']);
			});
			
			

		sfHover = function() {
        var sfEls = document.getElementById("menu").getElementsByTagName("li");
        for (var i=0; i<sfEls.length; i++) {
                sfEls[i].onmouseover=function() {
                        this.className+=" sfhover";
                }
                sfEls[i].onmouseout=function() {
                        this.className=this.className.replace(new RegExp(" sfhover\\b"), "");
                }
        }
		}
		if (window.attachEvent) window.attachEvent("onload", sfHover);
		</script>
    
    </head>
    <body>
        <div id="page">
            <div id="header">
				<ul id="menu">
				    <li><a href="{{ path('GuepeCrmBankBundle_homepage') }}"><img valign="middle" src="{{ asset('bundles/guepecrmbank/images/icons/home.png') }}" > Accueil</a></li>
					{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
					<li>
						<a href="{{ path('AllAccounts') }}">
							<img valign="middle" alt="New Accounts" src="{{ asset('bundles/guepecrmbank/images/icons/account.png') }}" > Accounts
						</a>
						<ul>
							<li><a href="{{ path('AddAccount') }}"> <img valign="middle" src="{{ asset('bundles/guepecrmbank/images/icons/add.png') }}" > New Accounts</a> </li>
						</ul>
					</li>
					<li>
						<a href="{{ path('AllContacts') }}">
							<img valign="middle" src="{{ asset('bundles/guepecrmbank/images/icons/man-woman.png') }}" > Contacts
							</a>
						<ul>
							<li><a href="{{ path('AddContact') }}"> <img valign="middle" src="{{ asset('bundles/guepecrmbank/images/icons/add.png') }}" > New Contact</a></li>
						</ul>
					</li>
					{% endif %}
		      </ul>
		      	<ul id="menu" class="login">
				 	<li>
				{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
				    {{ 'layout.logged_in_as' |trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
				  
				   </li>
				   <li>
				    <a href="{{ path('fos_user_security_logout') }}">
				        {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
				    </a>
				      <ul>
				    	<li><a href="{{ path('fos_user_profile_show') }}">Profil</a></li>
				    	<li><a href="{{ path('fos_user_change_password') }}">Mot de passe</a></li>
				     </ul>
				{% else %}
				    <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
				{% endif %}
					</li>
				</ul>		
				{% for key, message in app.session.getFlashes() %}
				<div class="{{ key }}">
				    {{ message|trans({}, 'FOSUserBundle') }}
				</div>
				{% endfor %}
	        </div>
			<div id="centerpane">
					{% block warning %}
					{% 	endblock %}
	
	            <div id="content">
	                {% block content %}	
	                {% endblock %}
	            </div>
	 		</div>
	 	</div>
        <div id="main" class="clearfix">
        <div id="footer">
 	    	     <img src="{{ asset('bundles/guepecrmbank/images/logo-transparent.gif') }}" alt="belspace"  height="30" valign="middle" />
                Tous droits réservés (c) 2012
        </div>
    </body>
</html>