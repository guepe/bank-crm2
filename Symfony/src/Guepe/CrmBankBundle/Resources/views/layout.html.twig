<html>
    <head>
        <title>{% block title %}Bank CRM{% endblock %}</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <link rel="stylesheet" href="{{ asset('bundles/guepecrmbank/css/main.css') }}" type="text/css" media="all" />
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js" type="text/javascript"></script> 
    	<link type="text/css" href="{{ asset('bundles/guepecrmbank/js')}}/jquery-ui/css/cupertino/jquery-ui-1.8.17.custom.css" rel="stylesheet" />	
		<script type="text/javascript" src="{{ asset('bundles/guepecrmbank/js')}}/jquery-ui/js/jquery-1.7.1.min.js"></script>
		<script type="text/javascript" src="{{ asset('bundles/guepecrmbank/js')}}/jquery-ui/js/jquery-ui-1.8.17.custom.min.js"></script>
		<script type="text/javascript">
			jQuery(function($){
				$.datepicker.regional['fr'] = {
					closeText: 'Fermer',
					prevText: '&#x3c;Préc',
					nextText: 'Suiv&#x3e;',
					currentText: 'Courant',
					monthNames: ['Janvier','Février','Mars','Avril','Mai','Juin',
					'Juillet','Août','Septembre','Octobre','Novembre','Décembre'],
					monthNamesShort: ['Jan','Fév','Mar','Avr','Mai','Jun',
					'Jul','Aoû','Sep','Oct','Nov','Déc'],
					dayNames: ['Dimanche','Lundi','Mardi','Mercredi','Jeudi','Vendredi','Samedi'],
					dayNamesShort: ['Dim','Lun','Mar','Mer','Jeu','Ven','Sam'],
					dayNamesMin: ['Di','Lu','Ma','Me','Je','Ve','Sa'],
					weekHeader: 'Sm',
					dateFormat: 'dd/mm/yy',
					firstDay: 1,
					isRTL: false,
					showMonthAfterYear: false,
					yearSuffix: ''};
				$.datepicker.setDefaults($.datepicker.regional['fr']);
			});
		</script>
    
    </head>
    <body>
        <div id="page">
            <div id="banner">
            	<a href="{{ path('AddAccount') }}"> <img valign="middle" src="{{ asset('bundles/guepecrmbank/images/icons/add.png') }}" > New Accounts</a> - 
            	<a href="{{ path('AddContact') }}"> <img valign="middle" src="{{ asset('bundles/guepecrmbank/images/icons/add.png') }}" > New Contact</a>
			</div>
			<div id="menu">
				<ul id="menu">
				    <li><a href="{{ path('GuepeCrmBankBundle_homepage') }}"><img valign="middle" src="{{ asset('bundles/guepecrmbank/images/icons/home.png') }}" > Accueil</a></li>
				    <li><a href="{{ path('AllAccounts') }}"><img valign="middle" src="{{ asset('bundles/guepecrmbank/images/icons/account.png') }}" > Accounts</a></li>
				    <li><a href="{{ path('AllContacts') }}"><img valign="middle" src="{{ asset('bundles/guepecrmbank/images/icons/man-woman.png') }}" > Contacts</a></li>                    
				</ul>
	        </div>
			<div id="centerpane">
					{% block warning %}
					{% 	endblock %}
	
	            <div id="content">
	                {% block content %}	
	                {% endblock %}
	            </div>
	 		</div>
        </div>
        <div id="footer">
 	    	     <img src="{{ asset('bundles/guepecrmbank/images/logo-transparent.gif') }}" alt="belspace"  height="30" valign="middle" />
                Tous droits réservés (c) 2012
        </div>
    </body>
</html>