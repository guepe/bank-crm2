			<span class="product-show-label">Organisme: </span> {{creditproduct.company }}
			<span class="product-show-label">Montant: </span> {{creditproduct.amount }}
			<span class="product-show-label">Date de début: </span> {{creditproduct.startdate|date('d/m/Y') }}
			<span class="product-show-label">Date de fin: </span> {{creditproduct.enddate|date('d/m/Y') }}
			<span class="product-show-label">Notes: </span> {{creditproduct.notes }}
			<span class="product-show-label">Montant mensualité: </span> {{creditproduct.recurrentprimeamount }}
			<span class="product-show-label">Taux d'intérêt: </span> {{creditproduct.tauxinteret }}
			<span class="product-show-label">Durée: </span> {{creditproduct.duration }}
			<span class="product-show-label">Variabilité: </span> {{creditproduct.variability }}
			<span class="product-show-label">Garantie: </span> {{creditproduct.garantee }}
			<span class="product-show-label">But: </span> {{creditproduct.purpose }}
			<span class="product-show-label">Description:  </span> {{creditproduct.description }}
			<span class="product-show-label">Date de paiement: </span> {{creditproduct.paymentdate|date('d/m/Y') }}
			</li>
		{% else %}
			<p>Aucune creditproduct n'a été trouvée.</p>
		{% endfor %}
		</ul>
		</div>
		<div data-role="collapsible">
		<h2>Produits Fiscal</h2>
