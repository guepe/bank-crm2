			<span class="product-show-label">Taux d'intérêt: </span> {{savingsproduct.tauxinteret }}
			<span class="product-show-label">Durée: </span> {{savingsproduct.duration }}
			<span class="product-show-label">Garantie: </span> {{savingsproduct.garantee }}
			<span class="product-show-label">Description:  </span> {{savingsproduct.description }}
			<span class="product-show-label">Date de paiement: </span> {{savingsproduct.paymentdate|date('d/m/Y') }}
			<span class="product-show-label">Echéance de paiement: </span> {{savingsproduct.paymentdate }}
			<span class="product-show-label">Reserve:  </span> {{savingsproduct.reserve }}
			<span class="product-show-label">Date de réserve: </span> {{savingsproduct.reservedate|date('d/m/Y') }}
			</li>
		{% else %}
			<p>Aucune savingsproduct n'a été trouvée.</p>
		{% endfor %}
		</ul>
		</div>
	</div><!-- /page -->	

{% endif %}	
{% endblock %}


