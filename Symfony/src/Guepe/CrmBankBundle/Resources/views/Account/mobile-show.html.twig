			<span class="product-show-label">Date de fin: </span> {{fiscalproduct.enddate|date('d/m/Y') }}
			<span class="product-show-label">Notes: </span> {{fiscalproduct.notes }}
			<span class="product-show-label">Montant prime annuelle: </span> {{fiscalproduct.recurrentprimeamount }}
			<span class="product-show-label">Taux d'intérêt: </span> {{fiscalproduct.tauxinteret }}
